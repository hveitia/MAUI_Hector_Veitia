<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI_APP.Views.Customers.CustomersPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:dx="http://schemas.devexpress.com/maui"
    Title="{Binding Title}">
    
    <Grid RowDefinitions="Auto,*">
        
        <!-- Header with refresh button -->
        <Grid Grid.Row="0" Padding="20" ColumnDefinitions="*,Auto">
            <Label 
                Grid.Column="0"
                Text="Customers List"
                FontSize="24"
                FontFamily="Roboto-Bold"
                TextColor="{dx:ThemeColor OnSurface}"
                VerticalOptions="Center"/>
            
            <dx:DXButton 
                Grid.Column="1"
                Content="Update"
                Command="{Binding GetCustomersCommand}"
                IsEnabled="{Binding IsNotBusy}"
                BackgroundColor="{dx:ThemeColor Primary}"
                TextColor="{dx:ThemeColor OnPrimary}"
                CornerRadius="8"
                Padding="16,8"/>
        </Grid>

        <!-- Loading indicator -->
        <ActivityIndicator 
            Grid.Row="1"
            IsVisible="{Binding IsBusy}"
            IsRunning="{Binding IsBusy}"
            Color="{dx:ThemeColor Primary}"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>

        <!-- Customers list -->
        <dx:DXCollectionView 
            Grid.Row="1"
            ItemsSource="{Binding AllCustomers}"
            IsVisible="{Binding IsNotBusy}"
            Margin="20,0">
            
            <dx:DXCollectionView.ItemTemplate>
                <DataTemplate>
                    <dx:DXBorder 
                        BackgroundColor="{dx:ThemeColor SurfaceContainer}"
                        CornerRadius="12"
                        Margin="0,8">
                        
                        <Grid Padding="16" ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                            
                            <!-- Customer Name -->
                            <Label 
                                Grid.Row="0" 
                                Grid.Column="0"
                                Text="{Binding FullName}"
                                FontSize="18"
                                FontFamily="Roboto-Medium"
                                TextColor="{dx:ThemeColor OnSurface}"/>
                            
                            <!-- Customer Status -->
                            <Label 
                                Grid.Row="0" 
                                Grid.Column="1"
                                Text="{Binding Active, StringFormat='State: {0}'}"
                                FontSize="12"
                                FontFamily="Roboto"
                                TextColor="{dx:ThemeColor OnSurfaceVariant}"
                                VerticalOptions="Center"/>
                            
                            <!-- Customer ID -->
                            <Label 
                                Grid.Row="1" 
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Text="{Binding Oid, StringFormat='ID: {0}'}"
                                FontSize="14"
                                FontFamily="Roboto"
                                TextColor="{dx:ThemeColor OnSurfaceVariant}"
                                Margin="0,4,0,0"/>
                            
                            <!-- Birthday -->
                            <Label 
                                Grid.Row="2" 
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Text="{Binding Birthday, StringFormat='Birthday: {0}'}"
                                FontSize="12"
                                FontFamily="Roboto"
                                TextColor="{dx:ThemeColor OnSurfaceVariant}"
                                Margin="0,4,0,0"/>
                            
                            <!-- Action buttons -->
                            <StackLayout 
                                Grid.Row="3" 
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Orientation="Horizontal"
                                Spacing="8"
                                Margin="0,12,0,0"
                                HorizontalOptions="End">
                                
                                <dx:DXButton 
                                    Content="Edit"
                                    BackgroundColor="{dx:ThemeColor Primary}"
                                    TextColor="{dx:ThemeColor OnPrimary}"
                                    CornerRadius="6"
                                    Padding="12,6"
                                    FontSize="12"
                                    FontFamily="Roboto-Medium"/>
                                
                                <dx:DXButton 
                                    Content="Delete"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCustomerCommand}"
                                    CommandParameter="{Binding Oid}"
                                    BackgroundColor="#D32F2F"
                                    TextColor="White"
                                    CornerRadius="6"
                                    Padding="12,6"
                                    FontSize="12"
                                    FontFamily="Roboto-Medium"/>
                                    
                            </StackLayout>
                        </Grid>
                    </dx:DXBorder>
                </DataTemplate>
            </dx:DXCollectionView.ItemTemplate>
            
            
        </dx:DXCollectionView>
        
    </Grid>

</ContentPage>